{
  "dashboard": {
    "id": null,
    "title": "Nginx Pod Monitoring",
    "panels": [
      {
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"nginx.*\"}[1m])) by (pod)"
          }
        ]
      },
      {
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"nginx.*\"}) by (pod)"
          }
        ]
      }
    ]
  }
}
